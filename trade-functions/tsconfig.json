{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "module": "es2015",
    "moduleResolution": "node",
    "ignoreDeprecations": "6.0",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "/opt/nodejs/index": ["../types/shared-layer"]
    }
  },
  "include": ["app.ts", "../types/**/*.d.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
